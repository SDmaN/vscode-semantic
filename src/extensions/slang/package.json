{
    "name": "slang",
    "displayName": "slang",
    "description": "VSCode Slang support.",
    "version": "0.0.1",
    "publisher": "sdman",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run copyviews",
        "compile": "tsc -p ./",
        "copyviews": "copyfiles -u 3 src/views/markup/**/*.html src/views/markup/**/*.css out/views/markup/",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "copyfiles": "^2.0.0",
        "tslint": "^5.10.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    }
}
