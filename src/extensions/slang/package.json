{
    "name": "slang",
    "displayName": "slang",
    "description": "VSCode Slang support.",
    "version": "0.0.1",
    "publisher": "sdman",
    "repository": {},
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "slang",
                "aliases": [
                    "Slang"
                ],
                "extensions": [
                    "slang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "slang.startPage",
                "title": "Открыть начальную страницу"
            },
            {
                "command": "slang.createProject",
                "title": "Создать проект"
            },
            {
                "command": "slang.openProject",
                "title": "Открыть проект"
            }
        ],
        "snippets": [
            {
                "language": "slang",
                "path": "./snippets/slang.json"
            }
        ],
        "grammars": [
            {
                "language": "slang",
                "scopeName": "source.slang",
                "path": "./syntaxes/slang.tmLanguage.json"
            }
        ],
        "problemMatchers": [
            {
                "name": "slang",
                "owner": "slang",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "source": "Slang",
                "applyTo": "allDocuments",
                "pattern": [
                    {
                        "regexp": "^\\[(err)\\|(.*)\\|(\\d+):(\\d+)\\]:(.*)",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run copytemplates && npm run copyviews",
        "compile": "tsc -p ./",
        "copyviews": "copyfiles -u 3 src/views/markup/**/*.html src/views/markup/**/*.css out/views/markup/",
        "copytemplates": "copyfiles -u 2 src/templates/**/*.sl src/templates/**/*.slproj out/templates/",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "copyfiles": "^2.0.0",
        "tslint": "^5.10.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "fs-extra": "^6.0.1"
    }
}